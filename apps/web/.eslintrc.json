{
  "extends": ["next/core-web-vitals"],
  "rules": {
    "react/no-unescaped-entities": "off",
    "no-console": ["warn", { "allow": ["warn", "error"] }],
    "prefer-const": "warn",
    "no-var": "error",
    "object-shorthand": "warn"
  },
  "ignorePatterns": [
    "node_modules/",
    ".next/",
    "coverage/",
    "*.config.js",
    "src/data/modules/communication.ts",
    "src/data/modules/recovery.ts",
    "src/data/modules/video.ts",
    "src/hooks/useTheme.ts",
    "src/utils/code-splitting.ts"
  ]
}
